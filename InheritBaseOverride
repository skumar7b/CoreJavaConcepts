 public void makesNoise() {
   System.out.println("Tiger roars and makes noise");
 }
 
 @Override
 public void eat() {
  System.out.println("Tiger Eats fresh meat of its hunt as food");
 }
 
}

 /**
 * Hippo subclass of animal (also called as derived or child or extended)
 * 
 */
class Hippo extends Animal {
 
 String region;

 // Overriding super class behavior
 @Override
 public void makesNoise() {
   System.out.println("Hippo groans and makes noise");
 }
 
 @Override
 public void eat() {
  System.out.println("Hippo Eats leaves, grass and fruit ");
 }
 
}
